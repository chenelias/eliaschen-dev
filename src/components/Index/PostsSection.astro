---
const posts = (await Astro.glob('../../pages/posts/*.md')).sort(
    (a: any, b: any) => new Date(b.frontmatter.createdAt).valueOf() - new Date(a.frontmatter.createdAt).valueOf()
)
---

<div>
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
            posts.map((post) => (
                <li>
                    <a href={`/posts/${post.frontmatter.filename}`}>
                        <div class="bg-gray-200 rounded-lg p-4">
                            <h1 class="text-xl font-mplus">{post.frontmatter.title}</h1>
                            <p>{post.frontmatter.description}</p>
                            <div class="bg-purple-300 font-bold rounded-md inline-flex text-xs px-1 py-[2px]">
                                {post.frontmatter.tags}
                            </div>
                            <span>{post.frontmatter.date}</span>
                        </div>
                    </a>
                </li>
            ))
        }
    </ul>
</div>
