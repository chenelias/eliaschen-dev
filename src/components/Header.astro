---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../config'
import ThemeToggle from './Header/ThemeToggleButton'
import DropdownMenu from './Header/DropdownMenu'
import Logoicon, { Githubicon } from './Header/Logoicon'
import ContentXL from './ContentXL.astro'
import { NavLinks } from '../components/data/NavLink'
---

<header class="fixed w-full pq2 z-20 dark:bg-[rgba(17, 17, 17,0.29)] bg-[rgba(249, 250, 251,0.30)] backdrop-blur-md">
    <div class="mx-auto max-w-[760px]">
        <nav class="flex items-center gap-3 text-base">
            <a href="/" class="grop flex header-homelink">
                <!-- rgb(24, 24, 27) -->
                <h2
                    class="logoicontext font-extrabold flex items-center tracking-tighter p-2 my-2 ml-2 font-mplus text-xl"
                >
                    <span class="hashtag-icon text-3xl duration-200">
                        <Logoicon client:visible />
                    </span>
                    EliasChen.dev
                </h2>
            </a>
            <div class="headerlink text-lg items-center gap-6">
                {
                    NavLinks.map((links) => (
                        <HeaderLink class="hover:underline hover:underline-offset-8 mx-2" href={links.url}>
                            {links.title}
                        </HeaderLink>
                    ))
                }
            </div>
            <div class="flex-1"></div>
            <div class="themetoggle"><ThemeToggle client:load /></div>
            <div class="dropdownmenu">
                <DropdownMenu client:visible />
            </div>
        </nav>
    </div>
</header>
<style>
    .header-homelink:hover .hashtag-icon {
        rotate: 17.5deg;
    }
    @media only screen and (max-width: 570px) {
        .headerlink {
            display: none;
        }
        .themetoggle {
            margin-right: 0px;
        }
        .dropdownmenu {
            display: inline-flex;
        }
        .logoicontext {
        }
    }
    @media only screen and (min-width: 570px) {
        .dropdownmenu {
            display: none;
        }
        .themetoggle {
            margin-right: 10px;
        }
        .logoicontext {
        }
    }
</style>
