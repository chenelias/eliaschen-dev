---
import React from 'react'
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Body from '../components/Body.astro'
import Content from '../components/Content.astro'

export interface Props {
    content: {
        title: string
        description: string
        createdAt?: string
        updatedAt?: string
        heroImage?: string
        tags: string[]
        fortime?: string
    }
}

const {
    content: { title, description, heroImage, tags,fortime },
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={`${title} - EliasChen`} description={description} />
    </head>

    <Body>
        <Header />
        <main class="pt-[56px]">
            <Content className="pt-6">
                <div class="mb-4">
                    {
                        heroImage && (
                            <img
                                class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                                src={heroImage}
                                alt="PostImage"
                            />
                        )
                    }
                </div>
                <!-- <div class="h-[4px] w-[40px] rounded-xl bg-orange-500"></div> -->
                <h1 class="text-3xl my-1 font-bold font-mplus text-orange-500">{title}</h1>
                <p class="bg-purple-300 dark:bg-orange-500 font-bold rounded-md inline-flex text-xs px-1 py-[2px]">
                    {tags}
                </p>
                <div>{description}</div>
                <hr class="border-top border-zinc-400 my-4" />
                <slot />
                <span class="underline underline-offset-2 hover:text-orange-500 decoration-orange-500 text-2xl"></span>
            </Content>
        </main>
        <Footer />
    </Body>
</html>
